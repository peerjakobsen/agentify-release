{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "webpack",
        "pattern": {
          "regexp": "^(ERROR|WARNING) in (.+):(\\d+):(\\d+)$",
          "file": 2,
          "line": 3,
          "column": 4,
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*webpack.*compiling.*$",
          "endsPattern": "^.*webpack.*compiled.*$"
        }
      }
    },
    {
      "type": "npm",
      "script": "compile",
      "problemMatcher": "$tsc",
      "group": "build"
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": ["$eslint-stylish"],
      "group": "test"
    }
  ]
}
