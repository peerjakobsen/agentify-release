FROM ghcr.io/astral-sh/uv:python3.11-bookworm-slim
WORKDIR /app

# All environment variables in one layer
ENV UV_SYSTEM_PYTHON=1 \
    UV_COMPILE_BYTECODE=1 \
    UV_NO_PROGRESS=1 \
    PYTHONUNBUFFERED=1 \
    DOCKER_CONTAINER=1 \
    AWS_REGION=us-east-1 \
    AWS_DEFAULT_REGION=us-east-1 \
    PYTHONPATH=/app \
    OTEL_SERVICE_NAME=AGENT_NAME \
    OTEL_PYTHON_DISTRO=aws_distro \
    OTEL_PYTHON_CONFIGURATOR=aws_configurator \
    OTEL_TRACES_SAMPLER=always_on \
    OTEL_LOGS_EXPORTER=none

COPY pyproject.toml pyproject.toml
# Install from requirements file
RUN uv pip install -r pyproject.toml

# Install OpenTelemetry for tracing
RUN uv pip install aws-opentelemetry-distro==0.12.2

# Signal that this is running in Docker for host binding logic
ENV DOCKER_CONTAINER=1

# Create non-root user
RUN useradd -m -u 1000 bedrock_agentcore
USER bedrock_agentcore

EXPOSE 9000
EXPOSE 8000
EXPOSE 8080

# Copy entire project (respecting .dockerignore)
COPY . .

# Run the handler module from the agents directory
# AGENT_HANDLER_MODULE will be replaced by setup.sh
CMD ["opentelemetry-instrument", "python", "-m", "agents.AGENT_HANDLER_MODULE"]
